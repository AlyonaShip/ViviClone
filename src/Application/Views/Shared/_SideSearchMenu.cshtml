@model Application.EntitiesModels.Models.ViewsModel.SideSearchMenuModel

<div class="sidebar-categories">
    <div class="shop-sidebar">
        @if (Model != null)
        {
            <div class="sidebar-title">Категории</div>
            <div class="shop-sidebar-content">
                <div id="brandsSideMenu">
                    @await Component.InvokeAsync("BrandsSideMenuComponent", Model)
                </div>
                <div class="categories-sidebar">
                    <div class="sidebar-title-section">Цена</div>
                    <div class="d-flex m-b-20">
                        <input type="text" class="price-range-input m-r-5" id="minPrice"/>
                        <input type="text" class="price-range-input" id="maxPrice"/>
                        <button id="setPriceRange" class="btn btn-success m-l-5">
                            OK
                        </button>
                    </div>
                    <div id="slider-range-price" class="mb-0 pb-0"></div>
                </div>         
                <div id="sideMenuOptions">
                    @await Component.InvokeAsync("SideMenuParamsComponent", Model)
                </div>
            </div>
        }
    </div>
    <div class="bestseller-sidebar">
        <div class="sidebar-title">Bestseller Products</div>
        <div class="bestseller-sidebar">
            @await Component.InvokeAsync("BestsellersComponent", User)
        </div>
    </div>
</div>


