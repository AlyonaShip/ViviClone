<div class="panel-categories">
    <div class="row">
        <div class="col-md-3">
            <div class="view-categories">
                <div class="click-grid color-active">
                    <i class="flaticon-four-grid-layout-design-interface-symbol"></i>
                </div>
                <div class="click-list">
                    <i class="flaticon-squares-gallery-grid-layout-interface-symbol"></i>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="select-categories">
                <div class="select-categories-content">
                    <span>Сортировать по</span>
                    <select name="position" id="sortingSelect">
                        <optgroup label="Цене">
                            <option value="cheap">От дешёвых к дорогим</option>
                            <option value="expensive">От дорогим к дешёвым</option>
                        </optgroup>
                        <optgroup label="Популярности">
                            <option value="popular" selected>По популярности</option>
                            <option value="rate">По рейтингу</option>
                        </optgroup>
                        <optgroup label="Названию товара">
                            <option value="nameDesc">&darr; От А до Я</option>
                            <option value="nameAsc">&uarr; От Я до А</option>
                        </optgroup>
                    </select>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="select-categories-content">
                <span>Показать</span>
                <select name="show" id="showWaresCount">
                    <option value="50" selected>50</option>
                    <option value="75">75</option>
                    <option value="100">100</option>
                    <option value="200">200</option>
                </select>
            </div>
        </div>
    </div>
</div>