@model IEnumerable<Application.EntitiesModels.Models.BrandModel>


@if (Model?.Count() > 0)
{
    <div class="sousmenu">
        @foreach (var brand in Model)
        {
            <ul class="secondLevelContainer">
                <li class="menu-item">
                    @{
                            var url = "shop?search=brands=" + Uri.EscapeDataString(brand.SubUrl);
                        }
                    <a href="@url">@brand.Name</a>
                </li>
            </ul>
        }
    </div>
}
