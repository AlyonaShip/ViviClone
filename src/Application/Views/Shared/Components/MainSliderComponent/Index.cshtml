@model List<Application.EntitiesModels.Models.SliderModel>
@using Application.EntitiesModels.Entities

<div class="container margin-from-menu">
    <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="15000">

        <ol class="carousel-indicators" style="top: 620px;">
            @for (int i = 0; i < Model.Count; i++)
            {
                if (i == 0)
                {
                    <li data-target="#myCarousel" data-slide-to="0" class="active slider-step"></li>
                }
                else
                {
                    <li data-target="#myCarousel" data-slide-to="@i" class="slider-step"></li>
                }
            }
        </ol>
        <div class="carousel-inner">
            @for (int i = 0; i < Model.Count; i++)
            {
                if (Model[i].Type == TypeSlider.Main)
                {
                    if (i == 0)
                    {
                        <div class="item active">
                            <a href="@Model[i].LinkToWare" target="_blank"><img src="@Model[i].Base64Image" alt="No IMG" class="main-page-baner"></a>
                        </div>
                    }
                    else
                    {
                        <div class="item">
                            <a href="@Model[i].LinkToWare" target="_blank"><img src="@Model[i].Base64Image" alt="No IMG" class="main-page-baner"></a>
                        </div>
                    }
                }
            }
        </div>

        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>



<script type='text/javascript'>
    var PTSettings = { "loop": "1", "f_effect": "15", "b_effect": "16", "autoslide": "yes", "autoslideduration": "5000" };
</script>